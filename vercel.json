{
  "version": 2,
  "builds": [
    {
      "src": "gameverse/backend/serverless.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "nodejs20.x"
      }
    },
    {
      "src": "gameverse/frontend",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "/gameverse/backend/serverless.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^/(.*)$",
      "dest": "/gameverse/frontend/dist/$1"
    },
    {
      "src": ".*",
      "dest": "/gameverse/frontend/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "JWT_EXPIRE": "30d"
  }
}
