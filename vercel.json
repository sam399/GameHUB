{
  "version": 2,
  "builds": [
    {
      "src": "gameverse/backend/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "nodejs20.x"
      }
    },
    {
      "src": "gameverse/frontend",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "gameverse/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "gameverse/frontend/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret",
    "JWT_EXPIRE": "30d",
    "RAWG_API_KEY": "@rawg_api_key"
  }
}
